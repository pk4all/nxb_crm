                <div class="content">
                    <div class="container-fluid">
                        <!-- Page-Title -->
                        <div class="row">
                            <div class="col-sm-12">
                                <h4 class="page-title">Permissions</h4>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Adolaa</a></li>
                                    <li class="breadcrumb-item active">Permissions</li>
                                </ol>
                            </div>
                        </div>
                    <div class="row">
                            <div class="col-md-6">
                                <a href="/admin/users" class="btn btn-default btn-md waves-effect waves-light m-b-30" ><i class="md md-list"></i> All Users Types</a>

                                <a href="/admin/users/sync-permissions" class="btn btn-default btn-md waves-effect waves-light m-b-30" ><i class="md md-list"></i> </a>
                                
                            </div>
                            <div class="col-md-6">
                                <button id="syncBtn" class="btn btn-warning btn-md waves-effect waves-light m-b-30 pull-right" onclick="sync();"><i class="md md-sync"></i> Sync All Permissions</button>
                            </div>
                        </div>
                        <div class="row justify-content-md-center">
                            <div class="col-sm-12 col-md-9">
                                <div class="card-box">
                                    <h4 class="text-dark header-title m-t-0">Permissions</h4>
                                    <div class="table-responsive">
                                                <table class="table table-actions-bar">
                                                    <thead>
                                                    <tr>
                                                        <th>Sr. No.</th>
                                                        <th>Name</th>
                                                        <th>Path</th>
                                                        <th>Method</th>
                                                        <th>Created</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {{#if permissions.length }}
                                                    {{#each permissions }}
                                                   <tr>
                                                        <td>{{incrementedIndex @index}}</td>
                                                        <td> <a class="permission" href="#"data-type="text" data-pk="1" data-title="Enter username">{{{this.name}}}</a> </td>
                                                        <td>{{{this.path}}}</td>
                                                        <td>{{{this.method}}}</td>
                                                        <td>{{{formatDate this.createdAt}}}</td>
                                                    </tr>
                                                   {{/each}}

                                                   {{else}}
                                                   <h4 class="text-dark header-title m-t-0">No permissions found</h4>
                                                   {{/if}}
                                                    </tbody>
                                                </table>
                                        </div>
                                        {{> paging pagination=pagination}}
                                </div>
                            </div>
                        </div>
                        <!-- end row -->
                        
                    </div> <!-- container -->

                </div> <!-- content -->
<style>
    #syncBtn{
       
        font-size: 15px !important;
    }

</style>
<script src="/admin/js/jquery-ui-1.10.1.custom.min.js"></script>
<link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/>
<script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
<script>
    $('.permission').editable({
        url: '/admin/change-permission-name',
        type: 'text',
        pk: 1,
        name: 'permission',
        title: 'Enter Name'
    });

    var l = Ladda.create(document.querySelector('#syncBtn'));  
    const sync = ()=>{
        l.start();
        fetch('/admin/user/sync-permissions', {
            method: 'GET'
          })
          .then(response => response.text())
          .then(result => {
            var r = JSON.parse(result);
            console.log(r);
            l.stop();
          }).catch(error => {
            console.error('Error uploading file:', error);
            l.stop();
          });
    }
</script>            


